<templateSet group="PHP">
  <template name="php" value="&lt;?php $END$ $TAG$" description="PHP tags" toReformat="false" toShortenFQNames="true">
    <variable name="TAG" expression="enum(&quot;&quot;, &quot;?&gt;&quot;)" defaultValue="&quot;&quot;" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="is" value="isset($END$)" description="Simple isset" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="rq" value="$_REQUEST['$END$']" description="$_REQUEST shortcut" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="thr" value="throw new $END$" description="throw new " toReformat="true" toShortenFQNames="true" />
  <template name="psf" value="public static function $NAME$($PARAMETERS$){&#10;    $END$&#10;}" description="public static function" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="PARAMETERS" expression="phpVar" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="for" value="for ($ITERATOR$ = $START$ ; $ITERATOR$ &lt; count($COLLECTION$) ; $ITERATOR$$PLUSMINUS$){&#10;    $END$&#10;}" description="PHP for loop" toReformat="false" toShortenFQNames="true">
    <variable name="ITERATOR" expression="" defaultValue="&quot;$i&quot;" alwaysStopAt="true" />
    <variable name="START" expression="" defaultValue="&quot;0&quot;" alwaysStopAt="true" />
    <variable name="COLLECTION" expression="" defaultValue="&quot;$array&quot;" alwaysStopAt="true" />
    <variable name="PLUSMINUS" expression="enum(&quot;++&quot;,&quot;--&quot;)" defaultValue="&quot;++&quot;" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>